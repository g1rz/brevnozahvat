mixin product-tpl(id, title, text, video, video_cover, arrPhotos)
    .row.row--m 
        .cols.cols-7.cols-md-12 
            h3 !{title}
            p !{text}
        .cols.cols-5.cols-md-12 
            .video-c 
                img.video-c__img(src=video_cover)
                a.video-c__btn.video-link(href=video)
                    img.video-c__btn-icon(src="img/play-button.png")
    .photos 
        each item in arrPhotos
            a.photos__link(href="img/photo.jpg", data-fancybox="gallery_"+id)
                img.photos__img(src=item)